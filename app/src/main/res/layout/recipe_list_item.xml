<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/grid_image_list_item"
            android:src="@drawable/recipe_list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                tools:text="title"
                android:id="@+id/tv_recipe_title_list_item"
                android:paddingTop="@dimen/recipe_padding"
                android:paddingLeft="@dimen/recipe_padding"
                android:paddingRight="@dimen/recipe_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_recipe_serving_list_item"
                tools:text="serving"
                android:paddingLeft="@dimen/recipe_padding"
                android:paddingRight="@dimen/recipe_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
